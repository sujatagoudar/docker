pipeline {
    agent {label 'slavetwo'}
    stages {
        stage('my Build') {
            steps {
                sh "echo ${BUILD_NUMBER}"
                sh 'docker build -t tomcat_build:${BUILD_NUMBER}'
            }
        }  
        stage('publish stage') {
            steps {
                sh "echo ${BUILD_NUMBER}"
                sh 'docker login -u sujatagoudar-p 123456789'
                sh 'docker tag tomcat_build:${BUILD_NUMBER} sujatagoudar/mytomcat:${BUILD_NUMBER}'
                sh 'docker push sujatagoudar/mytomcat:${BUILD_NUMBER}'
            }
        } 
        stage( 'my deploy' ) {
        agent {label 'slaveone'} 
            steps {
               sh 'docker pull sujatagoudar/mytomcat:${BUILD_NUMBER}'
               sh 'docker rm -f mytomcat'
               sh 'docker run -d -p 8080:8080 --name mytomcat sujatagoudar/mytomcat:${BUILD_NUMBER}'
            }
        }    
    } 
}
                		  
                     
           
